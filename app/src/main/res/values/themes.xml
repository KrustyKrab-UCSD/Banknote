<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Banknote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SignUpButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@null</item>
        <item name="iconSize">32dp</item>
    </style>
    <style name="BlackButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">true</item>
        <item name="backgroundTint">#282828</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="SettingsHeaderText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SettingsItemText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>