<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Banknote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="switchPreferenceStyle">@style/CustomPreferenceSwitch</item>
    </style>
    <style name="SignUpButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@null</item>
        <item name="iconSize">32dp</item>
        <item name="android:textSize">@dimen/text_size_content</item>
    </style>
    <style name="BlackButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">true</item>
        <item name="backgroundTint">#282828</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textSize">@dimen/text_size_content</item>
    </style>

    <style name="SettingsHeaderText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SettingsItemText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="InputFieldTitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:layout_marginLeft">48dp</item>
    </style>
    <style name="InputField" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/background_edit_text</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:layout_marginHorizontal">48dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="InputFieldTitleNewAccount" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>
    <style name="InputFieldNewAccount" parent="@style/InputField">
        <item name="android:layout_marginHorizontal">16dp</item>"
    </style>
    <style name="Heading" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CustomPreferenceSwitch" parent="Preference.SwitchPreference">
        <item name="android:widgetLayout">@layout/preference_switch_widget</item>
    </style>
    <style name="RecyclerViewItemText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">@dimen/text_size_recyclerview_item</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>